{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "watchPatterns": [
            "/backend/**"
        ],
        "nixpacksPlan": {
            "phases": {
                "setup": {
                    "nixPkgs": [
                        "nodejs_22",
                        "npm"
                    ]
                },
                "install": {
                    "cmds": [
                        "cd backend",
                        "npm ci"
                    ]
                },
                "build": {
                    "cmds": [
                        "cd backend",
                        "npm run build"
                    ]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "cd backend && npm run start",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 5
    }
}